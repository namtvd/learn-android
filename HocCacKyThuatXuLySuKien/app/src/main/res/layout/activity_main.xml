<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="vn.dev.tvdn.hoccackythuatxulysukien.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Nhập a"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtA" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Nhập b"
        android:id="@+id/textView2" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtB" />

    <Button
        android:onClick="xuLyPhepCong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(+) onClickXML"
        android:id="@+id/btnCong"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(-) Anomous Listerner"
        android:id="@+id/btnTru"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(*) Variable Listener"
            android:id="@+id/btnNhan" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(/) Variable Listener"
            android:id="@+id/btnChia" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Activity As Listener"
        android:id="@+id/btnAn"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Explicit Class Listener"
        android:id="@+id/btnThoat"
        android:layout_gravity="center_horizontal" />

    <Button
        android:onClick="xuLyDoiManHinhKhac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đổi màn hình khác"
        android:id="@+id/btnDoiManHinh"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
